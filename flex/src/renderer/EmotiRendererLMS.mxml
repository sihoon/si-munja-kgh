<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="203" height="203">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			override public function set data(value:Object):void { 
				super.data = value; 
				
				// Check to see if the data property is null. 
				if (value== null) return; 
				
				emt.text = value.msg;
			} 
			
		]]>
	</fx:Script>
	
	<s:Image source="images/munja_bg2.gif" left="0" width="203" height="203" fillMode="scale" smooth="true"/>
	<s:Label id="emt" left="16" right="16" top="34" bottom="15" useHandCursor="true"  click="{parentApplication.phoneFunction('message',data.msg)}" />
