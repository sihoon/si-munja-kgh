<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" width="142" height="125">
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			override public function set data(value:Object):void { 
				super.data = value; 
				
				// Check to see if the data property is null. 
				if (value== null) return; 
				
				emt.text = value.msg;
			} 
		]]>
	</fx:Script>

	<s:Image source="images/munja_bg1.gif" left="0"/>
	<s:Label id="emt" left="16" right="16" top="30" bottom="4" useHandCursor="true" click="{parentApplication.phoneFunction('message',data.msg)}" />
</s:ItemRenderer>
