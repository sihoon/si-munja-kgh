				}
				else {
					this.xml = new XMLListCollection(xlData.elements("addrs"));
					callLater( expendGroupTree );
				}
				
				callLater(spinnerStop);
			}
			
			private function address_ResultEventHandler(event:ResultEvent):void {
				
