				var selectedNode:XML = Tree(event.target).selectedItem as XML;
				//trace(selectedNode.@label);
			}
			
			public function addressPanelInit():void {
				modifyAddressIdx=0;
				textInputPhone.text = "";
				textInputName.text = "";
				textInputMemo.text = "";
