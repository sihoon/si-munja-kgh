				modifyAddressIdx = param.idx;
				
				var obj:Object = dropDownGroup.selectedItem;
				
				var ac:ArrayCollection = dropDownGroup.dataProvider as ArrayCollection;
				for (var i:int; i < ac.length; i++) {
